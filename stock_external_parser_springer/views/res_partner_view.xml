<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="partners_springer_form_view">
            <field name="name">partners.springer.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Springer Settings">
                        <group>
                            <field name="customer_number"/>
                            <field name="endorsement_line_1"/>
                            <field name="endorsement_line_2"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>