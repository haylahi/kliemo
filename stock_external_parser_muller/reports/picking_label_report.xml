<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <!-- REPORT DEFINITION -->
		<report
			id="stock_picking_muller_report_labels"
			string="Muller Labels"
			model="stock.picking"
			report_type="qweb-pdf"
			file="stock_picking_muller_labels"
			name="stock_external_parser_muller.muller_label_report"
		/>

        <record id="stock_external_parser_muller.stock_picking_muller_report_labels" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="picking_list_label_paperformat_muller"/>
        </record>

        <template id="muller_label_report">
            <t t-name="stock_external_parser_muller.muller_label">
                <t t-call="report.html_container">
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <style type="text/css">
                                h2 {
                                    font-size: 9pt;
                                    font-weight: bold;
                                }
                                h3 {
                                    font-size: 7pt;
                                    margin-top: 0;
                                }
                                .address {
                                    font-size: 8pt;
                                    
                                }
                                .address_box {
                                    border: 1px solid black;
                                    margin: 5px 10px; 5px; 10px;
                                    padding: 5px;
                                    width: 90%;
                                }
                                .info_box {
                                    border: 1px solid black;
                                    margin: 5px 10px; 5px; 10px;
                                    padding: 5px;
                                    width: 90%;
                                }
                            </style>
                            <div class="oe_structure" />
                            <div class="row">
                                <!-- Address -->
                                <div class="address_box">
                                    <h2><span t-field="o.partner_id.name" /></h2>
                                    <p class="address">
                                        <t t-if="o.partner_id.street">
                                            <span t-field="o.partner_id.street" /><br />
                                        </t>
                                        <t t-if="o.partner_id.street2">
                                            <span t-field="o.partner_id.street2" /><br />
                                        </t>
                                        <t t-if="o.partner_id.street3">
                                            <span t-field="o.partner_id.street3" /><br />
                                        </t>
                                        <t t-if="o.partner_id.zip and o.partner_id.city">
                                            <span t-field="o.partner_id.zip" /> <span t-field="o.partner_id.city" /><br />
                                        </t>
                                        <t t-if="o.partner_id.country_id.name">
                                            <span t-field="o.partner_id.country_id.name" /><br />
                                        </t>
                                    </p>
                                </div>
                                <div class="info_box">
                                    <h3><span t-field="o.external_order_number" /></h3>
                                    <h3><span t-field="o.name" /> (<span t-field="o.delivery_type" />)</h3>
                                    <h3><span t-field="o.file_id.name" /></h3>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>