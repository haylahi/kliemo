<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="res_country_muller_form_view">
            <field name="name">res.country.muller.form.view</field>
            <field name="model">res.country</field>
            <field name="inherit_id" ref="base.view_country_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="muller_country_code" />
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="res_country_muller_tree_view">
            <field name="name">res.country.muller.tree.view</field>
            <field name="model">res.country</field>
            <field name="inherit_id" ref="base.view_country_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="muller_country_code" />
                </xpath>
            </field>
        </record>
    </data>
</openerp>