<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_stock_post_report_wizard" model="ir.ui.view">
      <field name="name">POST Daily Report</field>
      <field name="model">wiz.stock.post.daily.report</field>
      <field name="arch" type="xml">
        <form string="Stock POST Daily report">
          <group col="4" colspan="4">
            <field name="ftp_setting"/>
            <field name="report_date"/>
          </group>
          <footer>
            <button name="get_report" icon="gtk-execute" string="Generate Report" type="object" context="{'xls_export':1}" default_focus="1" class="oe_highlight"/>
            or
            <button string="Cancel" class="oe_link" special="cancel" />
          </footer>
        </form>
      </field>
    </record>

    <record id="action_stock_post_report_wizard" model="ir.actions.act_window">
      <field name="name">Stock POST Report</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">wiz.stock.post.daily.report</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_stock_post_report_wizard"/>
      <field name="target">new</field>
    </record>

    <menuitem
        name="Stock POST Report"
        parent="stock.menu_stock_inventory_control"
        action="action_stock_post_report_wizard"
        id="menu_stock_post_report_wizard"
        sequence="55"
        icon="STOCK_JUSTIFY_FILL"/>
  </data>
</openerp>